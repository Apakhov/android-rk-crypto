<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="full_day_info_daily_txt">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            #000000
        </item>
        <item name="android:fontFamily">
            @font/lato
        </item>
    </style>

    <style name="full_day_info_daily_bold_txt">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            #000000
        </item>
        <item name="android:fontFamily">
            @font/montserrat_bold
        </item>
    </style>

    <style name="full_day_info_name_txt">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:textColor">
            #FFFFFF
        </item>
        <item name="android:fontFamily">
            @font/lato
        </item>
    </style>

    <style name="full_day_info_value_txt">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:textColor">
            #FFFFFF
        </item>
        <item name="android:fontFamily">
            @font/montserrat_bold
        </item>
    </style>

    <style name="full_day_info_exchange_txt">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            #FFC4DD
        </item>
        <item name="android:fontFamily">
            @font/montserrat_bold
        </item>
    </style>

    <style name="full_day_info_date_txt">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            #FFC4DD
        </item>
        <item name="android:fontFamily">
            @font/montserrat_bold
        </item>
    </style>
</resources>